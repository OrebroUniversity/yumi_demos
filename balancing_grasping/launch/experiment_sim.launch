<?xml version="1.0"?>
<launch>

   <arg name="name" default="yumi" doc="The robot name. Ensure this is the same name you give to the arm in the urdf instance."/>
   <arg name="rviz" default="true"/>

  <!-- Run the experiment node -->
  <node name="exp_node" pkg="balancing_grasping" type="balancing_exp_node" respawn="false" output="screen" >
     <param name="frame_left" type="string" value="grasp_link"/>
     <param name="log_directory" value="$(find balancing_grasping)/log"/>
     <param name="robot_namespace" value="yumi"/>
     <param name="tf_topic" value="/tf"/>
     <!--param name="tf_static_topic" value="/tf_static"/-->
     <param name="js_topic" value="/joint_states"/>
     <param name="grasp_r_topic" value="/yumi/gripper_r_effort_cmd"/>
     <param name="grasp_l_topic" value="/yumi/gripper_l_effort_cmd"/>
     <param name="ts_r_topic" value="/sensor_1/frames"/>
     <param name="ts_l_topic" value="/sensor_2/frames"/>
     <param name="joint_task_tol" value="0.01"/>
     <param name="pre_grasp_task_tol" value="0.0005"/>
     <param name="grasp_task_tol" value="0.0005"/>
     <param name="grasp_acq_dur" value="3.0"/>
     <param name="grasp_cont_dur" value="2.0"/>
     <param name="grasp_lift_dur" value="3.0"/>
     <param name="grasp_task_dur" value="12.0"/>
     <param name="theta_rand" value="1.0"/> <!-- the two grasp poses are randomized by a rotation around the world z axis within an interval given by this value -->
     <param name="grasp_rand" value="0.08"/> <!-- the two grasp poses are randomized along the world x direction within an interval given by this value -->
     <param name="alpha" value="0.3"/> <!--object tilt angle during the swivel motion-->
     <param name="cont_lift" value="0.01"/> <!--vertical travel to establish contact after moving to grasp poses-->
     <param name="grasp_lift" value="0.1"/> <!--vertical travel after grasping-->
  </node>

  <!--  Hardware interfaces and controllers -->
  <arg name="controllers" default="joint_state_controller hiqp_joint_velocity_controller"/>
  <arg name="gripper_controllers" default="gripper_effort_pos_controller_r gripper_effort_pos_controller_l"/>
  <arg name="arms_hardware_interface" default="VelocityJointInterface"/>
  <arg name="grippers_hardware_interface" default="EffortJointInterface"/>

   <!-- Parameter server stuff -->
  <rosparam file="$(find balancing_grasping)/config/yumi_controllers.yaml" command="load"/>
  <rosparam file="$(find balancing_grasping)/config/gripper_controllers.yaml" command="load" ns="/yumi/"/>
  <rosparam file="$(find balancing_grasping)/config/yumi_limits_preload.yaml" command="load"/>
  <rosparam file="$(find balancing_grasping)/config/exp_tasks_sim.yaml" command="load" ns="/exp_node" />

   <!-- Fire up Gazebo-->
  <arg name="paused" default="false"/>
  <arg name="use_sim_time" default="true"/>
  <arg name="gui" default="false"/>
  <arg name="headless" default="false"/>
  <arg name="debug" default="false"/>
  <arg unless="$(arg debug)" name="launch_prefix" value="" />
  <arg if="$(arg debug)" name="launch_prefix" value="gdb --ex run --args" />
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="debug" value="$(arg debug)" />
    <arg name="gui" value="$(arg gui)" />
    <arg name="paused" value="$(arg paused)"/>
    <arg name="use_sim_time" value="$(arg use_sim_time)"/>
    <arg name="headless" value="$(arg headless)"/>
  </include>

  <!-- URDF / SRDF parameters -->
  <!--param name="robot_description" command="$(find xacro)/xacro.py '$(find balancing_grasping)/urdf/balancing_grasping.urdf.xacro' arms_interface:=$(arg arms_hardware_interface) grippers_interface:=$(arg grippers_hardware_interface)" /-->

    <param name="robot_description" command="$(find xacro)/xacro.py '$(find balancing_grasping)/urdf/balancing_grasping.urdf.xacro' arms_interface:=$(arg arms_hardware_interface) grippers_interface:=$(arg grippers_hardware_interface)" />

  <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" args="-urdf -model yumi -param robot_description"  respawn="false" output="screen" />
  
  <node name="arm_controller_spawner" pkg="controller_manager" type="spawner" respawn="false" output="screen" args="$(arg controllers)" ns="/yumi"/>
  <node name="gripper_controller_spawner" pkg="controller_manager" type="spawner" respawn="false" output="screen" args="$(arg gripper_controllers)" ns="/yumi"/>

  <node name="robot_state_publisher" 
        pkg="robot_state_publisher" 
        type="robot_state_publisher" 
        respawn="false" 
        output="screen">
    <remap from="/joint_states" to="/yumi/joint_states" />
  </node>

  <node if="$(arg rviz)" name="rviz" pkg="rviz" type="rviz" args="-d $(find balancing_grasping)/launch/yumi.rviz"/>

</launch>


